<header id="site-header">
  <div class="wrap-xl">
    <div class="left">
      <div id="logo" title="<%= home_title %>">
        <a href="/<%- lang %>">
          <img src="/logotype-light.svg" alt="<%- logo_alt %>" title="<%- logo_title %>">
        </a>
      </div>
    </div>

    <div class="right">
      <nav class="pages">
        <ul>
          <li>
            <a href="/<%- lang %>/quick-start" class="top-level-item"><%- menu_quickstart %></a>
          </li>
          <li>
            <span class="top-level-item has-dropdown"><%- menu_apps %></span>
            
            <ul class="dropdown">
              <li></li>
            </ul>
          </li>
        </ul>
      </nav>

      <nav class="social-icons">
        <a href="<%- social_reddit_link %>" class="social-link" target="_blank" rel="nofollow">
          <i class="fab fa-reddit-square" title="Reddit"></i>
        </a>
        <a href="<%- social_github_link %>" class="social-link" target="_blank" rel="nofollow">
          <i class="fab fa-github-square" title="GitHub"></i>
        </a>
      </nav>

      <div class="lang-switcher">
        <span class="current-lang">
          <%- current_lang_prefix %><%- lang %>
        </span>

        <div class="all-langs">
          <a href="/en">English</a>
          <!-- <a href="/fr">Fran√ßais</a> -->
        </div>
      </div>

      <div class="theme-switcher" title="<%= nav_theme_switcher_title %>">
        <div class="svg--" data-src="/icons/sun.svg"></div>
      </div>
    </div>
  </div>
</header>