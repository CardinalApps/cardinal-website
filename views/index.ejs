<!doctype html>
<html lang="<%- lang %>">
  <head>
    <%- include('includes/bird.ejs') %>
    
    <title><%= home_title %></title>
    <meta name="description" content="<%- home_meta_desc %>">
    
    <meta property="og:title" content="<%= home_title %>">
    <meta property="og:description" content="<%- home_meta_desc %>">
    <meta property="og:url" content="https://cardinalapp.xyz/<%- lang %>">

    <link rel="canonical" href="https://cardinalapp.xyz/<%- lang %>">

    <%- include('includes/head.ejs') %>
  </head>
  
  <body>
    <%- include('includes/header.ejs') %>

    <section id="landing" class="home-section">
      <div class="wrap-l">
        <h1><%- landing_line_1 %></h1>
        <div class="landing-desc"><%- landing_line_desc %></div>
      </div>
    </section>

    <section id="downloads" class="wrap-l home-section">
      <h3><%- downloads_box_title %></h3>

      <div class="subtitle-notices">
        <p class="early-access"><%- early_access_notice %></p>
        <p class="download-agreement"><%- download_agreement %></p>
      </div>

      <div class="box">
        <div class="items">

          <!-- server -->
          <div class="item">
            <div class="icon">
              <img src="/icons/logo-server.svg" alt="<%- server_icon_alt %>" title="<%- server_icon_title %>">
            </div>
            <div class="meta">
              <h4 class="name"><%- downloads_server_name %></h4>
              <p class="description"><%- downloads_server_desc %></p>
              <ul class="features">
                <%- downloads_server_features %>
              </ul>
            </div>
            <div class="platforms">
              <%- include('includes/buttons/server-macos.ejs') %>
              <%- include('includes/buttons/server-windows.ejs') %>
            </div>
          </div>

          <!-- music -->
          <div class="item">
            <div class="icon">
              <img src="/icons/logo-music.svg" alt="<%- music_icon_alt %>" title="<%- music_icon_title %>">
            </div>
            <div class="meta">
              <h4 class="name"><%- downloads_music_name %></h4>
              <p class="description"><%- downloads_music_desc %></p>
              <ul class="features">
                <%- downloads_music_features %>
              </ul>
            </div>
            <div class="platforms">
              <%- include('includes/buttons/music-macos.ejs') %>
              <%- include('includes/buttons/music-windows.ejs') %>
            </div>
          </div>

          <!-- photos -->
          <div class="item">
            <div class="icon">
              <img src="/icons/logo-music.svg" alt="<%- photos_icon_alt %>" title="<%- photos_icon_title %>">
            </div>
            <div class="meta">
              <h4 class="name"><%- downloads_photos_name %></h4>
              <p class="description"><%- downloads_photos_desc %></p>
              <ul class="features">
                <%- downloads_photos_features %>
              </ul>
            </div>
            <div class="platforms">
              <p class="in-development"><%- in_development %></p>
            </div>
          </div>

          <!-- movies & tv -->
          <div class="item">
            <div class="icon">
              <img src="/icons/logo-music.svg" alt="<%- cinema_icon_alt %>" title="<%- cinema_icon_title %>">
            </div>
            <div class="meta">
              <h4 class="name"><%- downloads_cinema_name %></h4>
              <p class="description"><%- downloads_cinema_desc %></p>
              <ul class="features">
                <%- downloads_cinema_features %>
              </ul>
            </div>
            <div class="platforms">
              <p class="in-development"><%- development_planned %></p>
            </div>
          </div>

          <!-- books -->
          <div class="item">
            <div class="icon">
              <img src="/icons/logo-music.svg" alt="<%- books_icon_alt %>" title="<%- books_icon_title %>">
            </div>
            <div class="meta">
              <h4 class="name"><%- downloads_books_name %></h4>
              <p class="description"><%- downloads_books_desc %></p>
              <ul class="features">
                <%- downloads_books_features %>
              </ul>
            </div>
            <div class="platforms">
              <p class="in-development"><%- development_planned %></p>
            </div>
          </div>

        </div>
      </div>
    </section>

    <section id="core-values" class="wrap-m home-section">
      <h3><%- all_apps_features_title %></h3>
      <div class="core-value-list">
        <div class="core-value">
          <h5 class="name"><%- all_apps_features_privacy_title %></h5>
          <div class="info"><%- all_apps_features_privacy_desc %></div>
        </div>
        <div class="core-value">
          <h5 class="name"><%- all_apps_features_adfree_title %></h5>
          <div class="info"><%- all_apps_features_adfree_desc %></div>
        </div>
        <div class="core-value">
          <h5 class="name"><%- all_apps_features_noforce_title %></h5>
          <div class="info"><%- all_apps_features_noforce_desc %></div>
        </div>
      </div>
    </section>
    
    
    <%- include('includes/footer.ejs') %>
  </body>

  <%- include('includes/after-body-script.ejs') %>
</html>