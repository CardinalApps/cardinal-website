<!doctype html>
<html lang="<%- lang %>">
  <head>
    <%- include('includes/bird.ejs') %>
    
    <title><%= home_title %></title>
    <meta name="description" content="<%- home_meta_desc %>">
    
    <meta property="og:title" content="<%= home_title %>">
    <meta property="og:description" content="<%- home_meta_desc %>">
    <meta property="og:url" content="https://cardinalapp.xyz/<%- lang %>">

    <link rel="canonical" href="https://cardinalapp.xyz/<%- lang %>">

    <%- include('includes/head.ejs') %>
  </head>
  
  <body>
    <%- include('includes/header.ejs') %>

    <section id="landing" class="first home-section">
      <div class="wrap-l">
        <h1><%- landing_line_1 %></h1>
        <h2><%- landing_line_2 %></h2>
      </div>
    </section>

    <section id="downloads" class="wrap-l home-section">
      <h3><%- downloads_box_title %></h3>

      <div class="subtitle-notices">
        <p class="early-access"><%- early_access_notice %></p>
      </div>

      <div class="box">
        <div class="items">

          <!-- server -->
          <div class="item">
            <div class="icon">
              <img src="/icons/logo-server.svg" alt="<%- server_icon_alt %>" title="<%- server_icon_title %>">
            </div>

            <div class="meta">
              <h4 class="name"><%- downloads_server_name %></h4>

              <p class="description"><%- downloads_server_desc %></p>

              <ul class="features">
                <%- downloads_server_features %>
              </ul>

              <div class="platforms">
                <%- include('includes/buttons/server-macos.ejs') %>
                <%- include('includes/buttons/server-windows.ejs') %>
              </div>
            </div>
          </div>

          <!-- music -->
          <div class="item">
            <div class="icon">
              <img src="/icons/logo-music.svg" alt="<%- music_icon_alt %>" title="<%- music_icon_title %>">
            </div>

            <div class="meta">
              <h4 class="name"><%- downloads_music_name %></h4>

              <p class="description"><%- downloads_music_desc %></p>

              <ul class="features">
                <%- downloads_music_features %>
              </ul>

              <div class="platforms">
                <%- include('includes/buttons/music-macos.ejs') %>
                <%- include('includes/buttons/music-windows.ejs') %>
              </div>
            </div>
          </div>

        </div>
      </div>

      <div class="notices">
        <div class="download-agreement">
          <%- download_agreement %>
        </div>
      </div>
    </section>

    <section id="features" class="wrap-m home-section">
      <h3><%- all_apps_features_title %></h3>

      <div class="feature-list">
        <div class="feature">
          <h5 class="name"><%- all_apps_features_privacy_title %></h5>
          <div class="info"><%- all_apps_features_privacy_desc %></div>
        </div>

        <div class="feature">
          <h5 class="name"><%- all_apps_features_adfree_title %></h5>
          <div class="info"><%- all_apps_features_adfree_desc %></div>
        </div>
      </div>
    </section>
    
    
    <%- include('includes/footer.ejs') %>
  </body>

  <%- include('includes/after-body-script.ejs') %>
</html>